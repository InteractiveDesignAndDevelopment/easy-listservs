{
  "name": "easy-listservs",
  "version": "1.0.0",
  "description": "Easily sign up for listservs. Now without violating DMARC!",
  "main": "index.js",
  "scripts": {
    "prebuild": "run-s clean",
    "build": "run-s build:*",
    "build:js": "run-p build:js:*",
    "build:js:listserv-lookup": "browserify src/js/listserv-lookup.js -o build/listserv-lookup.js -t [ babelify --presets [ env minify ] ]",
    "build:js:listserv-manage": "browserify src/js/listserv-manage.js -o build/listserv-manage.js -t [ babelify --presets [ env minify ] ]",
    "build:css": "run-p build:css:*",
    "build:css:listserv-lookup": "run-s build:css:listserv-lookup:*",
    "build:css:listserv-lookup:node-sass": "node-sass src/scss/listserv-lookup.scss build/listserv-lookup.css",
    "build:css:listserv-lookup:postcss": "postcss build/listserv-lookup.css -u autoprefixer -o build/listserv-lookup.css",
    "build:css:listserv-lookup:cssnano": "cssnano build/listserv-lookup.css build/listserv-lookup.css",
    "build:css:listserv-manage": "run-s build:css:listserv-manage:*",
    "build:css:listserv-manage:node-sass": "node-sass src/scss/listserv-manage.scss build/listserv-manage.css",
    "build:css:listserv-manage:postcss": "postcss build/listserv-manage.css -u autoprefixer -o build/listserv-manage.css",
    "build:css:listserv-manage:cssnano": "cssnano build/listserv-manage.css build/listserv-manage.css",
    "build:html": "run-p build:html:*",
    "build:html:lookup-class-listservs": "cpy src/html/lookup-class-listservs.html build/",
    "build:html:special-interest-listservs-faculty": "cpy src/html/special-interest-listservs-faculty.html build/",
    "build:html:special-interest-listservs-student": "cpy src/html/special-interest-listservs-student.html build/",
    "postbuild": "run-s postbuild:*",
    "postbuild:gulp-inlinesource": "gulp inlinesource",
    "postbuild:copy-files": "run-p postbuild:copy-files:*",
    "postbuild:copy-files:lookup-class-listservs-dist": "cpy build/lookup-class-listservs.html dist/",
    "postbuild:copy-files:lookup-class-listservs-test": "cpy build/lookup-class-listservs.html test/",
    "postbuild:copy-files:special-interest-listservs-faculty-dist": "cpy build/special-interest-listservs-faculty.html dist/",
    "postbuild:copy-files:special-interest-listservs-faculty-test": "cpy build/special-interest-listservs-faculty.html test/",
    "postbuild:copy-files:special-interest-listservs-student-dist": "cpy build/special-interest-listservs-student.html dist/",
    "postbuild:copy-files:special-interest-listservs-student-test": "cpy build/special-interest-listservs-student.html test/",
    "postbuild:remove-build-directory": "rimraf build",
    "clean:dist": "rimraf dist &&  mkdirp dist",
    "clean:test": "rimraf test/lookup-class-listservs.html",
    "clean": "run-p clean:*",
    "test": "live-server test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/InteractiveDesignAndDevelopment/easy-listservs.git"
  },
  "author": "Todd Sayre",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/InteractiveDesignAndDevelopment/easy-listservs/issues"
  },
  "homepage": "https://github.com/InteractiveDesignAndDevelopment/easy-listservs#readme",
  "dependencies": {
    "autoprefixer": "^8.1.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-minify": "^0.3.0",
    "babelify": "^8.0.0",
    "browserify": "^16.1.1",
    "cpy-cli": "^1.0.1",
    "cssnano-cli": "^1.0.5",
    "element-closest": "^2.0.2",
    "fetch-jsonp": "^1.1.3",
    "gulp": "^3.9.1",
    "gulp-inline-source": "^3.1.0",
    "jquery": "^3.3.1",
    "jshint": "^2.9.5",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-sass": "^4.8.3",
    "nodelist-foreach": "^1.0.1",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^5.0.0",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "sass-bem": "^2.6.5",
    "swiper": "^3.4.2"
  }
}
