{
  "name": "easy-listservs",
  "version": "1.0.0",
  "description": "Easily sign up for listservs. Now without violating DMARC!",
  "main": "index.js",
  "scripts": {
    "prebuild": "run-s clean",
    "build": "run-p build:*",
    "build:js": "browserify src/listserv-lookup.js -o build/listserv-lookup.js -t [ babelify --presets [ env ] ]",
    "build:css": "run-s build:css:*",
    "build:css:node-sass": "node-sass src/listserv-lookup.scss build/listserv-lookup.css",
    "build:css:postcss": "postcss build/listserv-lookup.css -u autoprefixer -o build/listserv-lookup.css",
    "build:html": "cpy src/lookup-class-listservs.html build/",
    "postbuild": "run-s postbuild:*",
    "postbuild:inline-files": "jscat build/lookup-class-listservs.html | inline-source --root build > build/lookup-class-listservs.html",
    "postbuild:copy-files": "run-p postbuild:copy-files:*",
    "postbuild:copy-files:lookup-class-listservs-dist": "cpy build/lookup-class-listservs.html dist/",
    "postbuild:copy-files:lookup-class-listservs-test": "cpy build/lookup-class-listservs.html test/",
    "postbuild:remove-build-directory": "rimraf build",
    "clean:dist": "rimraf dist &&  mkdirp dist",
    "clean": "run-p clean:*",
    "test": "live-server test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/InteractiveDesignAndDevelopment/easy-listservs.git"
  },
  "author": "Todd Sayre",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/InteractiveDesignAndDevelopment/easy-listservs/issues"
  },
  "homepage": "https://github.com/InteractiveDesignAndDevelopment/easy-listservs#readme",
  "dependencies": {
    "autoprefixer": "^8.1.0",
    "babel-minify": "^0.3.0",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browserify": "^16.1.1",
    "cpy-cli": "^1.0.1",
    "cssnano-cli": "^1.0.5",
    "element-closest": "^2.0.2",
    "fetch-jsonp": "^1.1.3",
    "gulp-inline-source": "^3.1.0",
    "jquery": "^3.3.1",
    "jshint": "^2.9.5",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-sass": "^4.8.3",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^5.0.0",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "sass-bem": "^2.6.5",
    "swiper": "^3.4.2"
  }
}
